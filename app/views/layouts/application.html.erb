<!DOCTYPE html>
<html>
<head>
  <title>DBCYelp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar-collapse collapse">
	  <ul class="nav navbar-nav navbar-right">
	    <% unless authenticated? %>
	    <li><%= button_to "Sign In", {:controller => "sessions", :action => "sign_in"}, {:method => :get, :form_class => "navbar-form navbar-right", :class => "btn btn-success" }%></li>
	    <% else %>
	    <li><%= button_to "Sign Out", {:controller => "sessions", :action => "sign_out"}, {:method => :get, :form_class => "navbar-form navbar-right", :class => "btn btn-success" }%> </li>
	    <% end %>
	  </ul>
	</div><!--/.navbar-collapse -->

<%= yield %>
</div>
</div>
</div>
</body>
</html>
